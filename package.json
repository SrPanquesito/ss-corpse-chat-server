    "nodemon": "3.0.3",
    "sequelize": "6.37.3",
    "uuid": "10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "9.9.0",
    "eslint": "9.9.0",
    "eslint-config-prettier": "9.1.0",
    "globals": "15.9.0",
    "husky": "9.1.4",
    "jest": "29.7.0",
    "lint-staged": "15.2.8",
    "prettier": "3.3.3"
  }
